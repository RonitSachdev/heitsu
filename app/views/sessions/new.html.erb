<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <%= link_to root_path, class: "auth-logo" do %>
        <span class="logo-text">heitsu</span>
      <% end %>
      
      <h2>Welcome back</h2>
      <p>Sign in to your account to continue connecting</p>
    </div>
    
    <%= form_with url: login_path, method: :post, local: true, class: "auth-form" do |f| %>
      <div class="form-group">
        <%= f.label :email, "Email", class: "form-label" %>
        <%= f.email_field :email, 
            class: "form-input", 
            placeholder: "Enter your email",
            required: true %>
      </div>
      
      <div class="form-group">
        <%= f.label :password, "Password", class: "form-label" %>
        <%= f.password_field :password, 
            class: "form-input", 
            placeholder: "Enter your password",
            required: true %>
      </div>
      
      <div class="auth-actions">
        <%= f.submit "Sign In", class: "btn btn-primary auth-submit" %>
      </div>
    <% end %>
    
    <div class="auth-footer">
      <p>Don't have an account? <%= link_to "Sign up", signup_path, class: "auth-link" %></p>
    </div>
  </div>
</div>

<style>
.auth-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 1rem;
}

.auth-card {
  background: white;
  border-radius: 1.5rem;
  box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  width: 100%;
  max-width: 400px;
  padding: 2rem;
}

.auth-header {
  text-align: center;
  margin-bottom: 2rem;
}

.auth-logo {
  display: block;
  margin-bottom: 1.5rem;
}

.auth-logo .logo-text {
  font-size: 2rem;
  font-weight: 700;
  color: #6366f1;
  text-decoration: none;
}

.auth-header h2 {
  font-size: 1.75rem;
  font-weight: 600;
  color: #1f2937;
  margin-bottom: 0.5rem;
}

.auth-header p {
  color: #6b7280;
  margin-bottom: 0;
}

.auth-form {
  margin-bottom: 2rem;
}

.auth-submit {
  width: 100%;
  justify-content: center;
}

.auth-footer {
  text-align: center;
  padding-top: 1.5rem;
  border-top: 1px solid #e5e7eb;
}

.auth-footer p {
  color: #6b7280;
  margin: 0;
}

.auth-link {
  color: #6366f1;
  font-weight: 500;
  text-decoration: none;
}

.auth-link:hover {
  color: #4f46e5;
  text-decoration: underline;
}

@media (max-width: 480px) {
  .auth-card {
    padding: 1.5rem;
  }
  
  .auth-header h2 {
    font-size: 1.5rem;
  }
}
</style> 