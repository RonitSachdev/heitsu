<div class="edit-profile">
  <div class="container">
    <!-- Header -->
    <div class="page-header">
      <h1>Edit Profile</h1>
      <%= link_to "Back to Profile", profile_path, class: "back-link" %>
    </div>

    <!-- Edit Form -->
    <div class="form-container">
      <%= form_with model: current_user, url: profile_path, class: "profile-form" do |form| %>
        <% if current_user.errors.any? %>
          <div class="error-messages">
            <h4><%= pluralize(current_user.errors.count, "error") %> prohibited this profile from being saved:</h4>
            <ul>
              <% current_user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-sections">
          <!-- Personal Information -->
          <div class="form-section">
            <h3>Personal Information</h3>
            
            <div class="form-group">
              <%= form.label :first_name, class: "form-label" %>
              <%= form.text_field :first_name, class: "form-input" %>
            </div>

            <div class="form-group">
              <%= form.label :last_name, class: "form-label" %>
              <%= form.text_field :last_name, class: "form-input" %>
            </div>

            <div class="form-group">
              <%= form.label :username, class: "form-label" %>
              <%= form.text_field :username, class: "form-input" %>
              <small class="form-help">This will be your unique identifier on the platform</small>
            </div>

            <div class="form-group">
              <%= form.label :email, class: "form-label" %>
              <%= form.email_field :email, class: "form-input" %>
            </div>
          </div>

          <!-- Profile Details -->
          <div class="form-section">
            <h3>Profile Details</h3>
            
            <div class="form-group">
              <%= form.label :bio, "Bio (optional)", class: "form-label" %>
              <%= form.text_area :bio, rows: 4, placeholder: "Tell others about yourself...", class: "form-input" %>
              <small class="form-help">A brief description about yourself</small>
            </div>

            <div class="form-group">
              <%= form.label :interests, "Interests (optional)", class: "form-label" %>
              <%= form.text_field :interests, placeholder: "e.g., hiking, music, technology", class: "form-input" %>
              <small class="form-help">Comma-separated list of your interests</small>
            </div>
          </div>

          <!-- Privacy Settings -->
          <div class="form-section">
            <h3>Privacy Settings</h3>
            
            <div class="form-group checkbox-group">
              <%= form.check_box :profile_public, class: "form-checkbox" %>
              <%= form.label :profile_public, "Make my profile visible to other users", class: "checkbox-label" %>
              <small class="form-help">When enabled, other users can see your profile information</small>
            </div>

            <div class="form-group checkbox-group">
              <%= form.check_box :email_notifications, class: "form-checkbox" %>
              <%= form.label :email_notifications, "Send me email notifications", class: "checkbox-label" %>
              <small class="form-help">Get notified about matches, messages, and events</small>
            </div>
          </div>

          <!-- Password Change -->
          <div class="form-section">
            <h3>Change Password</h3>
            <p class="section-description">Leave blank to keep your current password</p>
            
            <div class="form-group">
              <%= form.label :password, "New Password", class: "form-label" %>
              <%= form.password_field :password, class: "form-input" %>
            </div>

            <div class="form-group">
              <%= form.label :password_confirmation, "Confirm New Password", class: "form-label" %>
              <%= form.password_field :password_confirmation, class: "form-input" %>
            </div>
          </div>
        </div>

        <!-- Form Actions -->
        <div class="form-actions">
          <%= form.submit "Update Profile", class: "btn btn-primary" %>
          <%= link_to "Cancel", profile_path, class: "btn btn-outline" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
.edit-profile {
  padding: 2rem 0;
}

