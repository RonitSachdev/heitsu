<div class="auth-container">
  <div class="auth-card">
    <div class="auth-header">
      <%= link_to root_path, class: "auth-logo" do %>
        <span class="logo-text">heitsu</span>
      <% end %>
      
      <h2>Join heitsu</h2>
      <p>Create your account and start connecting at events</p>
    </div>
    
    <%= form_with model: @user, url: signup_path, local: true, class: "auth-form" do |f| %>
      <% if @user.errors.any? %>
        <div class="form-errors">
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      
      <div class="form-row">
        <div class="form-group">
          <%= f.label :first_name, "First Name", class: "form-label" %>
          <%= f.text_field :first_name, 
              class: "form-input", 
              placeholder: "John",
              required: true %>
        </div>
        
        <div class="form-group">
          <%= f.label :last_name, "Last Name", class: "form-label" %>
          <%= f.text_field :last_name, 
              class: "form-input", 
              placeholder: "Doe",
              required: true %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label :username, "Username", class: "form-label" %>
        <%= f.text_field :username, 
            class: "form-input", 
            placeholder: "johndoe",
            required: true %>
      </div>
      
      <div class="form-group">
        <%= f.label :email, "Email", class: "form-label" %>
        <%= f.email_field :email, 
            class: "form-input", 
            placeholder: "john@example.com",
            required: true %>
      </div>
      
      <div class="form-group">
        <%= f.label :bio, "Bio (Optional)", class: "form-label" %>
        <%= f.text_area :bio, 
            class: "form-input form-textarea", 
            placeholder: "Tell us about yourself and what events you love...",
            rows: 3 %>
      </div>
      
      <div class="form-group">
        <%= f.label :password, "Password", class: "form-label" %>
        <%= f.password_field :password, 
            class: "form-input", 
            placeholder: "Create a strong password",
            required: true %>
      </div>
      
      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm Password", class: "form-label" %>
        <%= f.password_field :password_confirmation, 
            class: "form-input", 
            placeholder: "Confirm your password",
            required: true %>
      </div>
      
      <div class="auth-actions">
        <%= f.submit "Create Account", class: "btn btn-primary auth-submit" %>
      </div>
    <% end %>
    
    <div class="auth-footer">
      <p>Already have an account? <%= link_to "Sign in", login_path, class: "auth-link" %></p>
    </div>
  </div>
  
  <!-- Decorative elements -->
  <div class="auth-decoration">
    <div class="floating-shape shape-1"></div>
    <div class="floating-shape shape-2"></div>
    <div class="floating-shape shape-3"></div>
    <div class="floating-shape shape-4"></div>
  </div>
</div>

<style>
.auth-container {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, var(--color-grey-50) 0%, var(--color-white) 50%, var(--color-primary-light) 100%);
  padding: 2rem 1rem;
  position: relative;
  overflow: hidden;
}

.auth-card {
  background: var(--color-white);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-xl);
  width: 100%;
  max-width: 500px;
  padding: 2.5rem;
  border: 1px solid var(--color-grey-200);
  position: relative;
  z-index: 2;
}

.auth-header {
  text-align: center;
  margin-bottom: 2rem;
}

.auth-logo {
  display: block;
  margin-bottom: 1.5rem;
}

.auth-logo .logo-text {
  font-size: 2.5rem;
  font-weight: 800;
  color: var(--color-black);
  text-decoration: none;
  position: relative;
}

.auth-logo .logo-text::after {
  content: '';
  position: absolute;
  bottom: -4px;
  left: 50%;
  transform: translateX(-50%);
  width: 40px;
  height: 4px;
  background: var(--color-primary);
  border-radius: 2px;
}

.auth-header h2 {
  font-size: 1.875rem;
  font-weight: 700;
  color: var(--color-black);
  margin-bottom: 0.5rem;
}

.auth-header p {
  color: var(--color-grey-600);
  margin-bottom: 0;
}

.auth-form {
  margin-bottom: 2rem;
}

.form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1rem;
}

.form-errors {
  background: var(--color-white);
  border: 2px solid #ef4444;
  border-radius: var(--radius-lg);
  padding: 1rem;
  margin-bottom: 1.5rem;
}

.form-errors ul {
  list-style: none;
  margin: 0;
  padding: 0;
}

.form-errors li {
  color: #dc2626;
  font-size: var(--font-size-sm);
  font-weight: 500;
  margin-bottom: 0.25rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.form-errors li:last-child {
  margin-bottom: 0;
}

.form-errors li::before {
  content: 'âš ';
  color: #ef4444;
}

.auth-submit {
  width: 100%;
  justify-content: center;
  font-size: var(--font-size-base);
  padding: 1rem 1.5rem;
}

.auth-footer {
  text-align: center;
  padding-top: 1.5rem;
  border-top: 1px solid var(--color-grey-200);
}

.auth-footer p {
  color: var(--color-grey-600);
  margin: 0;
}

.auth-link {
  color: var(--color-black);
  font-weight: 600;
  text-decoration: none;
}

.auth-link:hover {
  color: var(--color-primary-dark);
  text-decoration: underline;
}

/* Decorative floating shapes */
.auth-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 1;
}

.floating-shape {
  position: absolute;
  border-radius: 50%;
  background: var(--color-primary);
  opacity: 0.1;
  animation: float 6s ease-in-out infinite;
}

.shape-1 {
  width: 120px;
  height: 120px;
  top: 15%;
  left: 8%;
  animation-delay: 0s;
}

.shape-2 {
  width: 80px;
  height: 80px;
  top: 75%;
  right: 12%;
  animation-delay: 2s;
}

.shape-3 {
  width: 60px;
  height: 60px;
  top: 45%;
  left: 3%;
  animation-delay: 4s;
}

.shape-4 {
  width: 100px;
  height: 100px;
  top: 20%;
  right: 5%;
  animation-delay: 1s;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0px) rotate(0deg);
  }
  33% {
    transform: translateY(-20px) rotate(120deg);
  }
  66% {
    transform: translateY(10px) rotate(240deg);
  }
}

@media (max-width: 768px) {
  .form-row {
    grid-template-columns: 1fr;
    gap: 0;
  }
}

@media (max-width: 480px) {
  .auth-container {
    padding: 1rem;
  }
  
  .auth-card {
    padding: 2rem;
    margin: 0.5rem;
  }
  
  .auth-header h2 {
    font-size: 1.5rem;
  }
  
  .auth-logo .logo-text {
    font-size: 2rem;
  }
  
  .floating-shape {
    display: none; /* Hide decorative elements on mobile for performance */
  }
}
</style> 