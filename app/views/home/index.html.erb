<!-- Hero Section -->
<section class="hero">
  <div class="container">
    <div class="hero-content">
      <div class="hero-text">
        <h1 class="hero-title">Meet people at events you love</h1>
        <p class="hero-subtitle">Swipe through fellow attendees, make connections, and turn events into meaningful relationships.</p>
        
        <div class="hero-actions">
          <%= link_to "Get Started", signup_path, class: "btn btn-primary btn-lg" %>
          <%= link_to "Login", login_path, class: "btn btn-secondary btn-lg" %>
        </div>
      </div>
      
      <div class="hero-visual">
        <div class="phone-mockup">
          <div class="phone-screen">
            <div class="swipe-demo">
              <div class="demo-card active">
                <div class="demo-avatar">A</div>
                <div class="demo-info">
                  <h4>Alex</h4>
                  <p>Tech Conference 2024</p>
                </div>
              </div>
              <div class="demo-card">
                <div class="demo-avatar">S</div>
                <div class="demo-info">
                  <h4>Sarah</h4>
                  <p>Music Festival</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- How It Works -->
<section class="how-it-works">
  <div class="container">
    <div class="text-center mb-6">
      <h2>How it works</h2>
      <p class="text-grey">Three simple steps to start connecting</p>
    </div>
    
    <div class="grid grid-3">
      <div class="step-card">
        <div class="step-number">1</div>
        <h3>Find Events</h3>
        <p>Browse events that match your interests and register to attend.</p>
      </div>
      
      <div class="step-card">
        <div class="step-number">2</div>
        <h3>Swipe & Match</h3>
        <p>Swipe through other attendees at events. Match with people you'd like to meet.</p>
      </div>
      
      <div class="step-card">
        <div class="step-number">3</div>
        <h3>Connect</h3>
        <p>Connect directly with matched users. Start conversations and plan to meet up.</p>
      </div>
    </div>
  </div>
</section>

<!-- Features -->
