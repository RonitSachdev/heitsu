        </div>
        <h3>Event Discovery</h3>
        <p>Discover new events and expand your social circle beyond your usual activities.</p>
      </div>
    </div>
  </div>
</section>

<!-- CTA -->
<section class="cta">
  <div class="container">
    <div class="cta-content">
      <h2>Ready to start connecting?</h2>
      <p>Join thousands of people making meaningful connections at events.</p>
      <%= link_to "Sign up now", signup_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>
</section>

