<style>
  /* Hero Section */
  .hero {
    background: linear-gradient(135deg, var(--color-grey-50) 0%, var(--color-white) 100%);
    padding: 5rem 0;
    min-height: 90vh;
    display: flex;
    align-items: center;
    position: relative;
    overflow: hidden;
  }

  .hero-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 5rem;
    align-items: center;
    position: relative;
    z-index: 2;
  }

  .hero-badge {
    background: linear-gradient(45deg, var(--color-primary), var(--color-primary-dark));
    color: var(--color-black);
    padding: 0.5rem 1rem;
    border-radius: 50px;
    font-size: var(--font-size-sm);
    font-weight: 600;
    display: inline-block;
    margin-bottom: 1.5rem;
    animation: pulse 2s infinite;
  }

  .badge-text {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  @keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.05); }
  }

  .hero-title {
    font-size: var(--font-size-4xl);
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1.5rem;
    color: var(--color-black);
    background: linear-gradient(135deg, var(--color-black), var(--color-grey-700));
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .hero-subtitle {
    font-size: var(--font-size-xl);
    color: var(--color-grey-600);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .hero-stats {
    display: flex;
    gap: 2rem;
    margin-bottom: 2.5rem;
    padding: 1.5rem 0;
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    font-size: var(--font-size-2xl);
    font-weight: 800;
    color: var(--color-primary-dark);
    margin-bottom: 0.25rem;
  }

  .stat-label {
    font-size: var(--font-size-sm);
    color: var(--color-grey-600);
    font-weight: 500;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    margin-bottom: 2.5rem;
  }

  .hero-cta {
    position: relative;
    overflow: hidden;
  }

  .hero-cta::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent);
    transition: left 0.6s;
  }

  .hero-cta:hover::before {
    left: 100%;
  }

  .hero-trust {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .trust-avatars {
    display: flex;
    margin-right: 0.5rem;
  }

  .trust-avatar {
    width: 2.5rem;
    height: 2.5rem;
    background: linear-gradient(135deg, var(--color-primary), var(--color-primary-dark));
    border-radius: 50%;
    border: 2px solid var(--color-white);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: var(--font-size-sm);
    color: var(--color-black);
    margin-left: -0.5rem;
    box-shadow: var(--shadow-sm);
  }

  .trust-avatar:first-child {
    margin-left: 0;
  }

  .trust-text {
    font-size: var(--font-size-sm);
    color: var(--color-grey-600);
    margin: 0;
    font-weight: 500;
  }

  .hero-pattern {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    opacity: 0.05;
    pointer-events: none;
  }

  .pattern-dot {
    position: absolute;
    width: 4px;
    height: 4px;
    background: var(--color-primary);
    border-radius: 50%;
  }

  .pattern-dot:nth-child(1) { top: 20%; left: 10%; animation: float 3s infinite; }
  .pattern-dot:nth-child(2) { top: 40%; right: 20%; animation: float 4s infinite 1s; }
  .pattern-dot:nth-child(3) { bottom: 30%; left: 15%; animation: float 5s infinite 2s; }
  .pattern-dot:nth-child(4) { top: 60%; left: 50%; animation: float 3.5s infinite 0.5s; }
  .pattern-dot:nth-child(5) { bottom: 20%; right: 10%; animation: float 4.5s infinite 1.5s; }

  /* Phone Mockup */
  .hero-visual {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .phone-mockup {
    width: 300px;
    height: 600px;
    background: linear-gradient(145deg, var(--color-black), var(--color-black-light));
    border-radius: 2.5rem;
    padding: 1rem;
    margin: 0 auto;
    position: relative;
    box-shadow: var(--shadow-xl);
    animation: phoneFloat 4s ease-in-out infinite;
  }

  @keyframes phoneFloat {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-10px) rotate(1deg); }
  }

  .phone-screen {
    width: 100%;
    height: 100%;
    background: var(--color-white);
    border-radius: 2rem;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .phone-glow {
    position: absolute;
    top: -20px;
    left: -20px;
    right: -20px;
    bottom: -20px;
    background: linear-gradient(45deg, var(--color-primary), var(--color-primary-dark));
    border-radius: 3rem;
    opacity: 0.1;
    animation: glow 3s ease-in-out infinite alternate;
    z-index: -1;
  }

  @keyframes glow {
    0% { opacity: 0.1; transform: scale(1); }
    100% { opacity: 0.2; transform: scale(1.05); }
  }

  .floating-elements {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
  }

  .floating-icon {
    position: absolute;
    font-size: 1.5rem;
    background: var(--color-white);
    border-radius: 50%;
    width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-lg);
    animation: floatIcon 6s ease-in-out infinite;
  }

  .icon-1 {
    top: 20%;
    left: -10%;
    animation-delay: 0s;
  }

  .icon-2 {
    top: 50%;
    right: -15%;
    animation-delay: 1.5s;
  }

  .icon-3 {
    bottom: 30%;
    left: -5%;
    animation-delay: 3s;
  }

  .icon-4 {
    top: 10%;
    right: -10%;
    animation-delay: 4.5s;
  }

  @keyframes floatIcon {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    33% { transform: translateY(-15px) rotate(5deg); }
    66% { transform: translateY(5px) rotate(-5deg); }
  }

  .swipe-demo {
    position: relative;
    width: 200px;
    height: 300px;
  }

  .demo-card {
