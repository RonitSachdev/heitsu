<div class="dashboard-container">
  <div class="container">
    <!-- Welcome Section -->
    <div class="dashboard-header">
      <div class="welcome-content">
        <h1>Welcome back, <%= current_user.first_name %>!</h1>
        <p class="subtitle">Ready to discover new connections and events?</p>
      </div>
      
      <div class="quick-actions">
        <%= link_to events_path, class: "action-card" do %>
          <div class="action-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
              <line x1="16" y1="2" x2="16" y2="6"/>
              <line x1="8" y1="2" x2="8" y2="6"/>
              <line x1="3" y1="10" x2="21" y2="10"/>
            </svg>
          </div>
          <div class="action-content">
            <h3>Browse Events</h3>
            <p>Find exciting events near you</p>
          </div>
        <% end %>
        
        <%= link_to swipe_path, class: "action-card featured" do %>
          <div class="action-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
            </svg>
          </div>
          <div class="action-content">
            <h3>Start Swiping</h3>
            <p>Connect with people at events</p>
          </div>
        <% end %>
        
        <%= link_to matches_path, class: "action-card" do %>
          <div class="action-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
            </svg>
          </div>
          <div class="action-content">
            <h3>Messages</h3>
            <p>Chat with your matches</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Stats Grid -->
    <div class="stats-section">
      <h2>Your Activity</h2>
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
              <line x1="16" y1="2" x2="16" y2="6"/>
              <line x1="8" y1="2" x2="8" y2="6"/>
              <line x1="3" y1="10" x2="21" y2="10"/>
            </svg>
          </div>
          <div class="stat-content">
            <div class="stat-number"><%= @stats[:registered_events] %></div>
            <div class="stat-label">Events Registered</div>
          </div>
        </div>
        
        <div class="stat-card">
          <div class="stat-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
            </svg>
          </div>
          <div class="stat-content">
            <div class="stat-number"><%= @stats[:total_matches] %></div>
            <div class="stat-label">Total Matches</div>
          </div>
        </div>
        
        <div class="stat-card">
          <div class="stat-icon">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/>
            </svg>
          </div>
          <div class="stat-content">
            <div class="stat-number"><%= @stats[:unread_messages] %></div>
            <div class="stat-label">Unread Messages</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Content Grid -->
    <div class="content-grid">
      <!-- Upcoming Events -->
      <div class="content-section">
        <div class="section-header">
          <h3>Upcoming Events</h3>
          <%= link_to events_path, class: "view-all-link" do %>
            View All
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <polyline points="9,18 15,12 9,6"/>
            </svg>
          <% end %>
        </div>
        
        <div class="content-list">
          <% if @upcoming_events.any? %>
            <% @upcoming_events.each do |event| %>
              <div class="content-card">
                <%= link_to event_path(event), class: "card-link" do %>
                  <div class="card-header">
                    <div class="event-category">
                      <%= event.category %>
                    </div>
                    <div class="event-date">
                      <%= event.event_date.strftime("%b %d") %>
                    </div>
                  </div>
                  <div class="card-body">
                    <h4><%= event.title %></h4>
                    <div class="event-details">
                      <div class="detail-item">
                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                          <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                          <circle cx="12" cy="10" r="3"/>
                        </svg>
                        <span><%= event.location %></span>
                      </div>
                      <div class="detail-item">
                        <svg class="icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"/>
                          <circle cx="12" cy="7" r="4"/>
                        </svg>
                        <span><%= event.registered_users_count %> attending</span>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          <% else %>
            <div class="empty-state">
              <div class="empty-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                  <line x1="16" y1="2" x2="16" y2="6"/>
                  <line x1="8" y1="2" x2="8" y2="6"/>
                  <line x1="3" y1="10" x2="21" y2="10"/>
                </svg>
              </div>
              <h4>No upcoming events</h4>
              <p>Discover exciting events happening near you!</p>
              <%= link_to "Browse Events", events_path, class: "btn btn-primary btn-sm" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Recent Matches -->
      <div class="content-section">
        <div class="section-header">
          <h3>Recent Matches</h3>
          <%= link_to matches_path, class: "view-all-link" do %>
            View All
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
              <polyline points="9,18 15,12 9,6"/>
            </svg>
          <% end %>
        </div>
        
        <div class="content-list">
          <% if @recent_matches.any? %>
            <% @recent_matches.each do |match| %>
              <div class="content-card">
                <%= link_to match_path(match), class: "card-link" do %>
                  <div class="match-card">
                    <div class="match-avatar">
                      <%= match.user1 == current_user ? match.user2.first_name.first.upcase : match.user1.first_name.first.upcase %>
                    </div>
                    <div class="match-info">
                      <h4><%= match.user1 == current_user ? match.user2.full_name : match.user1.full_name %></h4>
                      <p class="match-event">Matched at <%= match.event.title %></p>
                      <% if match.messages.any? %>
                        <div class="message-preview">
                          <div class="message-count">
                            <%= match.messages.count %> messages
                          </div>
                        </div>
                      <% else %>
                        <div class="no-messages">
                          <span>Say hello!</span>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          <% else %>
            <div class="empty-state">
              <div class="empty-icon">
                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                  <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                </svg>
              </div>
              <h4>No matches yet</h4>
              <p>Start swiping to find your perfect connections!</p>
              <%= link_to "Start Swiping", swipe_path, class: "btn btn-primary btn-sm" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .dashboard-container {
    min-height: calc(100vh - 72px);
    background: linear-gradient(135deg, var(--color-grey-50) 0%, var(--color-white) 100%);
    padding: 2rem 0;
  }

  .dashboard-header {
    margin-bottom: 3rem;
  }

  .welcome-content {
    text-align: center;
    margin-bottom: 2rem;
  }

  .welcome-content h1 {
    color: var(--color-black);
    margin-bottom: 0.5rem;
    font-size: var(--font-size-3xl);
  }

  .subtitle {
    color: var(--color-grey-600);
    font-size: var(--font-size-lg);
    margin: 0;
  }

  .quick-actions {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .action-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    background: var(--color-white);
    border: 2px solid var(--color-grey-200);
    border-radius: var(--radius-xl);
    padding: 1.5rem;
    text-decoration: none;
    transition: var(--transition);
    box-shadow: var(--shadow-sm);
  }

  .action-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--color-primary);
  }

  .action-card.featured {
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    border-color: var(--color-primary);
    color: var(--color-black);
  }

  .action-card.featured:hover {
    transform: translateY(-4px) scale(1.02);
  }

  .action-icon {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-lg);
    background: var(--color-grey-100);
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
  }

  .action-card.featured .action-icon {
    background: rgba(255, 255, 255, 0.2);
    color: var(--color-black);
  }

  .action-icon svg {
    width: 24px;
    height: 24px;
    stroke-width: 2;
  }

  .action-content h3 {
    color: var(--color-black);
    margin: 0 0 0.25rem;
    font-size: var(--font-size-lg);
    font-weight: 600;
  }

  .action-content p {
    color: var(--color-grey-600);
    margin: 0;
    font-size: var(--font-size-sm);
  }

  .action-card.featured .action-content p {
    color: rgba(0, 0, 0, 0.7);
  }

  .stats-section {
    margin-bottom: 3rem;
  }

  .stats-section h2 {
    text-align: center;
    margin-bottom: 2rem;
    color: var(--color-black);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1.5rem;
  }

  .stat-card {
    background: var(--color-white);
    border-radius: var(--radius-xl);
    padding: 1.5rem;
    text-align: center;
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--color-grey-200);
    transition: var(--transition);
  }

  .stat-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .stat-icon {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-lg);
    background: var(--color-primary-light);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
    color: var(--color-black);
  }

  .stat-icon svg {
    width: 24px;
    height: 24px;
    stroke-width: 2;
  }

  .stat-number {
    font-size: var(--font-size-3xl);
    font-weight: 800;
    color: var(--color-black);
    line-height: 1;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    color: var(--color-grey-600);
    font-size: var(--font-size-sm);
    font-weight: 500;
    margin: 0;
  }

  .content-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
  }

  .content-section {
    background: var(--color-white);
    border-radius: var(--radius-xl);
    border: 1px solid var(--color-grey-200);
    overflow: hidden;
    box-shadow: var(--shadow-sm);
  }

  .section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 1.5rem;
    border-bottom: 1px solid var(--color-grey-200);
    background: var(--color-grey-50);
  }

  .section-header h3 {
    margin: 0;
    color: var(--color-black);
    font-size: var(--font-size-lg);
    font-weight: 600;
  }

  .view-all-link {
    display: flex;
    align-items: center;
    gap: 0.25rem;
    color: var(--color-primary);
    text-decoration: none;
    font-size: var(--font-size-sm);
    font-weight: 500;
    transition: var(--transition);
  }

  .view-all-link:hover {
    color: var(--color-primary-dark);
  }

  .view-all-link svg {
    width: 14px;
    height: 14px;
    stroke-width: 2;
  }

  .content-list {
    padding: 1rem;
  }

  .content-card {
    margin-bottom: 1rem;
  }

  .content-card:last-child {
    margin-bottom: 0;
  }

  .card-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.75rem;
  }

  .event-category {
    background: var(--color-primary-light);
    color: var(--color-black);
    padding: 0.25rem 0.75rem;
    border-radius: var(--radius-full);
    font-size: var(--font-size-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.025em;
  }

  .event-date {
    color: var(--color-grey-600);
    font-size: var(--font-size-sm);
    font-weight: 600;
  }

  .card-body h4 {
    color: var(--color-black);
    margin: 0 0 0.5rem;
    font-size: var(--font-size-base);
    font-weight: 600;
  }

  .event-details {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .detail-item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-grey-600);
    font-size: var(--font-size-sm);
  }

  .detail-item .icon {
    width: 14px;
    height: 14px;
    stroke-width: 2;
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .match-card,
  .group-card {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    border: 1px solid var(--color-grey-200);
    border-radius: var(--radius-lg);
    background: var(--color-white);
    transition: var(--transition);
  }

  .match-card:hover,
  .group-card:hover {
    border-color: var(--color-primary);
    box-shadow: var(--shadow-sm);
  }

  .match-avatar {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-black);
    font-weight: 700;
    font-size: var(--font-size-lg);
    flex-shrink: 0;
  }

  .group-icon {
    width: 48px;
    height: 48px;
    border-radius: var(--radius-lg);
    background: var(--color-primary-light);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-black);
    flex-shrink: 0;
  }

  .group-icon svg {
    width: 24px;
    height: 24px;
    stroke-width: 2;
  }

  .match-info,
  .group-info {
    flex: 1;
    min-width: 0;
  }

  .match-info h4,
  .group-info h4 {
    margin: 0 0 0.25rem;
    color: var(--color-black);
    font-size: var(--font-size-base);
    font-weight: 600;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .match-event,
  .group-event {
    color: var(--color-grey-600);
    font-size: var(--font-size-sm);
    margin: 0 0 0.5rem;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .message-preview,
  .group-members {
    font-size: var(--font-size-xs);
    color: var(--color-grey-500);
  }

  .message-count {
    background: var(--color-primary-light);
    color: var(--color-black);
    padding: 0.125rem 0.5rem;
    border-radius: var(--radius-full);
    font-weight: 600;
    display: inline-block;
  }

  .no-messages span {
    color: var(--color-primary);
    font-weight: 500;
  }

  .empty-state {
    text-align: center;
    padding: 2rem 1rem;
  }

  .empty-icon {
    width: 48px;
    height: 48px;
    color: var(--color-grey-400);
    margin: 0 auto 1rem;
  }

  .empty-state h4 {
    color: var(--color-black);
    margin: 0 0 0.5rem;
    font-size: var(--font-size-base);
    font-weight: 600;
  }

  .empty-state p {
    color: var(--color-grey-600);
    margin: 0 0 1.5rem;
    font-size: var(--font-size-sm);
  }

  /* Mobile Responsive */
  @media (max-width: 768px) {
    .dashboard-container {
      padding: 1rem 0;
    }

    .dashboard-header {
      margin-bottom: 2rem;
    }

    .welcome-content h1 {
      font-size: var(--font-size-2xl);
    }

    .quick-actions {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .action-card {
      padding: 1rem;
    }

    .stats-section {
      margin-bottom: 2rem;
    }

    .stats-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }

    .stat-card {
      padding: 1rem;
    }

    .stat-number {
      font-size: var(--font-size-2xl);
    }

    .content-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .section-header {
      padding: 1rem;
    }

    .content-list {
      padding: 0.75rem;
    }

    .match-card,
    .group-card {
      padding: 0.75rem;
    }

    .match-avatar {
      width: 40px;
      height: 40px;
      font-size: var(--font-size-base);
    }

    .group-icon {
      width: 40px;
      height: 40px;
    }

    .group-icon svg {
      width: 20px;
      height: 20px;
    }
  }

  @media (max-width: 480px) {
    .stats-grid {
      grid-template-columns: 1fr;
    }

    .quick-actions {
      gap: 0.75rem;
    }

    .action-card {
      gap: 0.75rem;
      padding: 1rem;
    }

    .action-icon {
      width: 40px;
      height: 40px;
    }

    .action-icon svg {
      width: 20px;
      height: 20px;
    }

    .action-content h3 {
      font-size: var(--font-size-base);
    }

    .content-grid {
      gap: 1rem;
    }

    .event-details {
      gap: 0.125rem;
    }

    .detail-item {
      font-size: var(--font-size-xs);
    }
  }
</style> 